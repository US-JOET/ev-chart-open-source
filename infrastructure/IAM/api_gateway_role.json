    "Version": "2012-10-17",
    "Statement": [
        {
            "Action": [
                "lambda:InvokeFunction"
            ],
            "Resource": [
                "arn:aws:lambda:*:ENV_ACCOUNT_ID:function:EV-ChART_*"
            ],
            "Effect": "Allow"
        }
    ]
}
